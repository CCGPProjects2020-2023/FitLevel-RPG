<Page x:Class="FitLevel_RPG.ResetPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitLevel_RPG"
        mc:Ignorable="d"
        Title="ResetPassword" Height="450" Width="800">
    <Grid>
        <Label x:Name="PageName" Content="Reset Password" HorizontalAlignment="Left" Margin="209,99,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="LabelEmail" Content="Email:" HorizontalAlignment="Left" Margin="127,176,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextboxEmail" HorizontalAlignment="Left" Margin="183,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="220" TabIndex="0"/>
        <Button x:Name="ButtonResePassword" Content="Get Code" HorizontalAlignment="Left" Margin="317,225,0,0" VerticalAlignment="Top" Width="86" Click="ResetButtonClick" IsDefault="True"/>
        <TextBlock x:Name="TextblockResetInfo" HorizontalAlignment="Left" Margin="147,135,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <TextBlock x:Name="TextblockError" HorizontalAlignment="Left" Margin="183,203,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Foreground="#FFA92626" Visibility="Hidden"/>

    </Grid>
</Page>
